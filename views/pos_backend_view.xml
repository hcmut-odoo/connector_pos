<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_pos_backend_form" model="ir.ui.view">
        <field name="name">pos.backend.form</field>
        <field name="model">pos.backend</field>
        <field name="arch" type="xml">
            <form string="Pos Backend">
                <header>
                    <button
                        name="button_check_connection"
                        type="object"
                        class="oe_highlight"
                        string="Check Connection"
                        attrs="{'invisible':[('state', 'not in', ['draft'])]}"
                    />
                    <button
                        name="synchronize_basedata"
                        type="object"
                        class="oe_highlight"
                        help="Synchonize datas like language, country, currency, tax"
                        string="Synchronize Base Data"
                        attrs="{'invisible':[('state', 'in', ['draft'])]}"
                    />

                    <button
                        name="button_reset_to_draft"
                        type="object"
                        string="Reset To draft Connection"
                        attrs="{'invisible':[('state', 'in', ['draft'])]}"
                    />

                    <field name="state" widget="statusbar" readonly="1" />
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button
                            class="oe_stat_button"
                            type="object"
                            name="toggle_active"
                            icon="fa-archive"
                        >
                            <field
                                name="active"
                                widget="boolean_button"
                                options='{"terminology": "archive"}'
                            />
                        </button>

                    </div>
                    <h1>
                        <field name="name" class="oe_inline" />
                    </h1>

                    <group>
                        <field name="company_id" />
                    </group>
                    <group>
                        <group col="4">
                            <field name="location" colspan="4" />
                            <field name="webservice_key" colspan="4" />

                        </group>
                        <group>
                            <field name="verbose" />
                            <field name="debug" />
                        </group>
                    </group>
                    <group name="main_configuration" string="Main Configuration">
                        <group string="Sales">
                            <field name="tz" />
                            <field name="sale_team_id" />
                            <field
                                name="importable_order_state_ids"
                                widget="many2many_tags"
                            />
                            <field name="discount_product_id" />
                        </group>
                        <group string="Stock">
                            <field name="warehouse_id" />
                            <field name="stock_location_id" />
                            <field name="shipping_product_id" />
                             <field name="product_qty_field" />
                        </group>
                    </group>
                    <notebook attrs="{'invisible':[('state', 'in', ['draft'])]}">
                        <page name="import" string="Imports">
                            <p class="oe_grey oe_inline">
                                By clicking on the buttons,
                                you will initiate the
                                synchronizations
                                with Pos.
                                Note that the import or exports
                                won't be done directly,
                                they will create 'Jobs'
                                executed as soon
                                as possible.
                            </p>
                            <p class="oe_grey oe_inline">
                                Once imported,
                                some types of records,
                                like the products
                                or categories,
                                need a manual review.
                                You will find the list
                                of the
                                new records to review
                                in the menu 'Connectors > Checkpoint'.
                            </p>
                            <group>
                                <div>
                                    <label
                                        string="Import product categories"
                                        class="oe_inline"
                                        for="import_categories_from_date"
                                    />
                                    <field
                                        name="import_categories_from_date"
                                        class="oe_inline"
                                        nolabel="1"
                                    />
                                </div>
                                <button
                                    name="import_product_categories"
                                    type="object"
                                    class="oe_highlight"
                                    string="Import in background"
                                />
                            </group>
                            <group>
                                <div>
                                    <label
                                        string="Import product categories and products"
                                        class="oe_inline"
                                        for="import_products_since"
                                    />
                                    <field
                                        name="import_products_since"
                                        class="oe_inline"
                                        nolabel="1"
                                    />
                                </div>
                                <button
                                    name="import_products"
                                    type="object"
                                    class="oe_highlight"
                                    string="Import in background"
                                />
                            </group>
                            <group>
                                <span>Import stock quantities</span>
                                <button
                                    name="import_stock_qty"
                                    type="object"
                                    class="oe_highlight"
                                    string="Import in background"
                                />
                            </group>
                            <group>
                                <div>
                                   <span>Import payment mode</span>
                                    <label
                                        string="Import payment mode"
                                        class="oe_inline"
                                        for="import_payment_mode_since"
                                    />
                                    <field
                                        name="import_payment_mode_since"
                                        class="oe_inline"
                                        nolabel="1"
                                    />
                                </div>
                                <button
                                    name="import_payment_modes"
                                    type="object"
                                    class="oe_highlight"
                                    string="Import in background"
                                />
                            </group>
                            <group>
                                <div>
                                    <label
                                        string="Import customer groups and customers since"
                                        class="oe_inline"
                                        for="import_partners_since"
                                    />
                                    <field
                                        name="import_partners_since"
                                        class="oe_inline"
                                        nolabel="1"
                                    />
                                </div>
                                <button
                                    name="import_customers_since"
                                    type="object"
                                    class="oe_highlight"
                                    string="Import in background"
                                />
                            </group>
                            <group>
                                <div>
                                    <label
                                        string="Import sale orders since"
                                        class="oe_inline"
                                        for="import_orders_since"
                                    />
                                    <field
                                        name="import_orders_since"
                                        class="oe_inline"
                                        nolabel="1"
                                    />
                                </div>
                                <button
                                    name="import_sale_orders"
                                    type="object"
                                    class="oe_highlight"
                                    string="Import in background"
                                />
                            </group>
                            <group>
                                <span>Import carriers</span>
                                <div>
                                    <button
                                        name="import_carriers"
                                        type="object"
                                        class="oe_highlight"
                                        string="Import in background"
                                    />
                                </div>
                            </group>
                        </page>
                        <page string="Export">
                            <group>
                                <span>Export stock quantities</span>
                                <button
                                    name="update_product_stock_qty"
                                    type="object"
                                    class="oe_highlight"
                                    string="Export in background"
                                />
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_pos_backend_tree" model="ir.ui.view">
        <field name="name">pos.backend.tree</field>
        <field name="model">pos.backend</field>
        <field name="arch" type="xml">
            <tree string="Pos Backend">
                <field name="name" />
                <field name="location" />
            </tree>
        </field>
    </record>

    <record id="action_pos_backend" model="ir.actions.act_window">
        <field name="name">Pos Backends</field>
        <field name="res_model">pos.backend</field>
        <field name="view_mode">tree,form</field>
    </record>
    
</odoo>
