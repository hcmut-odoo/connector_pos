<odoo>
    <data>
        <record model="ir.ui.view" id="view_sale_order_form_inherited">
            <field name="name">sale.order.form.inherited</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='user_id']" position="after">
                    <field name="order_state" decoration-primary="order_state == 'Confirmed'" decoration-warning="order_state == 'Pending'" decoration-danger="order_state == 'Canceled'" decoration-info="order_state == 'Delivering'" decoration-success="order_state == 'Shipped'" widget="badge" optional="show"/>
                </xpath>
            </field>
        </record>

        <record model="ir.ui.view" id="view_sale_order_tree_inherited">
            <field name="name">sale.order.tree.inherited</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='state']" position="after">
                    <field name="order_state" decoration-primary="order_state == 'Confirmed'" decoration-warning="order_state == 'Pending'" decoration-danger="order_state == 'Canceled'" decoration-info="order_state == 'Delivering'" decoration-success="order_state == 'Shipped'" widget="badge" optional="show"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
